<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#F1CC85"
        >

  <SearchView
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          android:id="@+id/svWeathSearchView"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_width="0dp"
          android:layout_height="50dp"
          app:layout_constraintBottom_toTopOf="@id/clWeatherContainer"
          />

  <androidx.constraintlayout.widget.Guideline
          android:orientation="horizontal"
          android:id="@+id/mainWeatherHeightGuide"
          android:layout_width="match_parent"
          app:layout_constraintGuide_percent="0.34"
          android:layout_height="0dp"
          />

  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_height="0dp"
          android:layout_width="0dp"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@id/svWeathSearchView"
          app:layout_constraintBottom_toTopOf="@id/mainWeatherHeightGuide"
          android:id="@+id/clWeatherContainer"
          >

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/clWeatherWithLocation"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            >

      <ImageView
              android:layout_gravity="center"
              android:layout_margin="20dp"
              android:id="@+id/imageWeather"
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:src="@drawable/cloudy"
              app:layout_constraintTop_toTopOf="@id/clLocationContainer"
              app:layout_constraintBottom_toBottomOf="@id/clLocationContainer"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/clLocationContainer"
              app:layout_constraintHorizontal_weight="1"
              />

      <androidx.constraintlayout.widget.ConstraintLayout
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/clLocationContainer"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toRightOf="@id/imageWeather"
              app:layout_constraintHorizontal_weight="2"
              >

        <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="PARIS, FR"
                android:textSize="48sp"
                android:textColor="#fff"
                />

        <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtLocation"
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sat Apr 21 2018"
                android:textSize="28sp"
                android:textColor="#fff"
                />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTempContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clWeatherWithLocation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            >

      <TextView
              app:layout_constraintTop_toTopOf="parent"
              android:gravity="center_horizontal"
              android:textColor="#fff"
              android:padding="10dp"
              android:id="@+id/txt1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="20"
              android:textSize="48sp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@+id/txt2"
              app:layout_constraintHorizontal_weight="1"
              />

      <TextView
              app:layout_constraintTop_toTopOf="parent"
              android:gravity="center_horizontal"
              android:textColor="#fff"
              android:padding="10dp"
              android:id="@+id/txt2"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              tools:text="20"
              android:textSize="48sp"
              app:layout_constraintLeft_toRightOf="@id/txt1"
              app:layout_constraintRight_toLeftOf="@id/txt3"
              app:layout_constraintHorizontal_weight="1"
              />

      <TextView
              app:layout_constraintTop_toTopOf="parent"
              android:gravity="center_horizontal"
              android:textColor="#fff"
              android:padding="10dp"
              android:id="@+id/txt3"
              android:layout_width="0dp"
              tools:text="20"
              android:textSize="48sp"
              android:layout_height="wrap_content"
              app:layout_constraintLeft_toRightOf="@id/txt2"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintHorizontal_weight="1"
              />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rvCountries"
          android:layout_width="0dp"
          android:layout_height="0dp"
          app:layout_constraintTop_toBottomOf="@id/clWeatherContainer"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          />

</androidx.constraintlayout.widget.ConstraintLayout>